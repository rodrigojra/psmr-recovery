    <appender name="FILE-ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}${LOG_FILENAME}</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/archived/${LOG_FILENAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- each archived file, size max 10MB -->
            <maxFileSize>5MB</maxFileSize>
            <!-- total size of all archive files, if total size > 20GB, it will delete old archived file -->
            <totalSizeCap>200MB</totalSizeCap>
            <!-- 60 days to keep -->
            <maxHistory>60</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
            	<!-- %d %p %c{1.} [%t] %m%n -->
            	%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>    

	<root level="INFO">
		<!-- To use async logging use ref="ASYNC" instead -->
	</root>

	<logger name="bftsmart" level="INFO">
		<appender-ref ref="MIN-STDOUT" />
		<!-- <appender-ref ref="STDOUT" /> -->
		<appender-ref ref="FILE-ROLLING"/>
	</logger>

	<logger name="io.netty" level="OFF">
		<appender-ref ref="MIN-STDOUT" />
		<!-- <appender-ref ref="STDOUT" /> -->
		<appender-ref ref="FILE-ROLLING"/>
	</logger>

